@model Wicresoft.MODLibrarySystem.Wap.Models.BookManage.BookModel

@{
    ViewBag.Title = "BookDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container" style="margin-top:5px">
        <div class="row">
            <div class="col-xs-3"></div>
            <div class="col-xs-6">
                <img class="img-responsive img-thumbnail center-block" src="~/Content/images/DefaultPic.jpg" />
            </div>
            <div class="col-xs-3"></div>
        </div>
        <div class="row" style="margin-top:5px">
            <div class="col-xs-12 ">
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>
                            @Html.Label("BookName:")
                        </th>
                        <td>
                            @this.Model.BookName
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("Author:")
                        </th>
                        <td>
                            @Html.TextAreaFor(m => this.Model.AuthorName, new { @readonly = "readonly", style = "resize:none; width:100%; height:30px;" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("Price:")
                        </th>
                        <td>
                            @this.Model.Price_Inventory
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("Catagory:")
                        </th>
                        <td>
                            @Html.TextAreaFor(m => this.Model.CatagoryName, new { @readonly = "readonly", style = "resize:none; width:100%; height:30px;" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("ISBN:")
                        </th>
                        <td>
                            @this.Model.ISBN
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("Publisher:")
                        </th>
                        <td>
                            @this.Model.PublisherName
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("PublishDate:")
                        </th>
                        <td>
                            @this.Model.Publish_Date
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("Avaliable")
                        </th>
                        <td>
                            @this.Model.Avaliable_Inventory
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.Label("MaxAvaliable")
                        </th>
                        <td>
                            @this.Model.Max_Inventory
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row" style="margin-top:5px">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div>
                    @Html.Label("Publisher Description")
                </div>
                <div>
                    @Html.TextAreaFor(m => m.PublisherDisplayDescription, new { @readonly = "readonly", style = "resize:none;width:100%; height:100px;" })
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:5px">
            <p class="col-xs-12">
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
}
