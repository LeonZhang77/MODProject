@{
    ViewBag.Title = "Book Search";
}
@model Wicresoft.MODLibrarySystem.Wap.Models.BookManage.BookManageIndexModel
@using (Html.BeginForm())
{
    <div class="container" style="margin-top:5px">
        <div class="row">
            <form class="form-horizontal" style="margin-top:10px">
                <div class="form-group col-md-4">
                    <span>BookName</span>
                    @Html.TextBoxFor(m => m.SearchBookName, new { @placeholder = "Enter Book Name", @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <span>Category</span>
                    @Html.DropDownListFor(m => m.SearchSelectedID, this.Model.SearchCategoryList, new { @class = "btn btn-group-lg btn-default dropdown-toggle" })
                </div>
                <div class="form-group col-md-4">
                    <span>Can be Reserve</span> @Html.CheckBoxFor(m => m.IsAvaliable)
                    <input class="btn btn-default" type="submit" value="Search" />
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <span>Book Search List</span>
            </div>
        </div>
        <div class="row">
            @if (this.Model.BookModelList.Count > 0)
            {
                for (int i = 0; i < this.Model.BookModelList.Count; i++)
                {
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4" style="float:left; margin-top:10px">
                        <table class="table table-bordered" style=" height:350px">
                            <tr>
                                <td rowspan="3" style="height:112px;width:75px"><img class="img-responsive" src="~/Content/images/DefaultPic.jpg" /></td>
                                <th>
                                    Book
                                </th>
                                <td>
                                    @this.Model.BookModelList[i].BookName
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    ISBN
                                </th>
                                <td>
                                    @this.Model.BookModelList[i].ISBN
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Price
                                </th>
                                <td>
                                    @this.Model.BookModelList[i].Price_Inventory
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Avaliable
                                </th>
                                <td colspan="2">
                                    @this.Model.BookModelList[i].Avaliable_Inventory
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    MaxAvaliable
                                </th>
                                <td colspan="2">
                                    @this.Model.BookModelList[i].Max_Inventory
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    PublishDate
                                </th>
                                <td colspan="2">
                                    @this.Model.BookModelList[i].Publish_Date
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Publisher
                                </th>
                                <td colspan="2">
                                    @this.Model.BookModelList[i].PublisherName
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Author
                                </th>
                                <td colspan="2">
                                    @Html.TextAreaFor(m => this.Model.BookModelList[i].AuthorName, new { @readonly = "readonly", style = "resize:none; width:100%; height:30px;" })
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Catagory
                                </th>
                                <td colspan="2">
                                    @Html.TextAreaFor(m => this.Model.BookModelList[i].CatagoryName, new { @readonly = "readonly", style = "resize:none; width:100%; height:30px;" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @if (this.Model.BookModelList[i].IsAvaliable)
                                    {
                                        <a href="javascript:void(0);" onclick="alert('Coming soon.')">Reserve</a>
                                        @*@Html.ActionLink("Reserve", "ReserveBook", new { @id = this.Model.BookModelList[i].ID })*@
                                    }
                                    else
                                    {
                                        <span style="color:gray">Reserve</span>
                                    }
                                </td>
                                <td colspan="2" align="right">
                                    @Html.ActionLink("Detail", "BookDetail", new { @id = this.Model.BookModelList[i].ID })
                                </td>
                            </tr>
                        </table>
                    </div>
                }
            }
            else
            {
                <div style="width:100%;float:left">
                    <span>No Result.</span>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12, col-md-12 col-sm-12 col-xs-12">
                <table>
                    <tr>
                        @Html.Raw(this.Model.PagingContent.PagingViewContent)
                    </tr>
                </table>
            </div>
        </div>
    </div>
}
