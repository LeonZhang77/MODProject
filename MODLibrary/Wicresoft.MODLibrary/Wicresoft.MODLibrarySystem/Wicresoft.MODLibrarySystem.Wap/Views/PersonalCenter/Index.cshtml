@{
    ViewBag.Title = "Personal Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Wicresoft.MODLibrarySystem.Wap.Models.RentManage.RentManageIndexModel
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@Scripts.Render("~/Scripts/PersonalCenterJS/PersonalCenter.js")
@using (Html.BeginForm())
{
    <div class="full-screen">
        <div style="height:30%; background-color:#CCCCCC">
            <a href="AccountManage">
                <div class="row" style="height:100%">
                    <div id="person-header" class="col-xs-4 center-block" style="height:100%; ">
                        <img class="img-circle img-responsive" src="~/Content/images/Header.jpg" />
                    </div>
                    <div class="col-xs-8" style="text-align:center; padding:20%">
                        <span style="color:#999999;font-weight:700">
                            @ViewBag.UserName
                        </span>
                    </div>
                </div>
            </a>
        </div>
        <br />
        <div style="height:70%">
            <div class="row" style="height:100%;text-align:center">
                <ul class="nav nav-tabs">
                    <li class="active" style="width:40%">
                        <a href="#bookinhand" data-toggle="tab">Book In Hand</a>
                    </li>
                    <li style="width:30%">
                        <a href="#request" data-toggle="tab">Request</a>
                    </li>
                    <li style="width:30%">
                        <a href="#history" data-toggle="tab">History</a>
                    </li>
                </ul>
                <div class="tab-content" style="height:100%">
                    <div class="tab-pane fade in active" id="bookinhand">
                        <div class="container">
                            @foreach (var item in this.Model.BookInHandModelList)
                            {
                                <div class="box-shadow-default">
                                    <table class="table table-condensed table-top">
                                        <tr>
                                            <th>
                                                @Html.Label("Title")
                                            </th>
                                            <td align="right">
                                                <smail>@item.Title</smail>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.Label("Start Borrow Day")
                                            </th>
                                            <td align="right">
                                                <samil>@item.StartBorrowDay</samil>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.Label("Expiration Day")
                                            </th>
                                            <td align="right">
                                                <smaill>@item.EXpirationDay</smaill>
                                            </td>
                                        </tr>
                                    </table>
                                    @if (item.HasAlreadyRenewed)
                                    {
                                        <a class="btn btn-default disabled btn-width">Renewed</a>
                                    }
                                    @if (item.EnableRenew)
                                    {
                                        <button type="button" class="btn btn-primary btn-width" data-itemid=@item.ID data-toggle="modal" data-target=".bs-example-modal-sm">Renew</button>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade" id="request" style="height:100%">
                        <div class="container" style="height:100%;text-align:left">
                            @foreach (var item in this.Model.MyRequestList)
                            {
                                if (@item.Status == "Approved")
                                {
                            <div class="box-shadow-approved">
                                <table class="table table-condensed table-top">
                                    <tr>
                                        <th>
                                            @Html.Label("Title")
                                        </th>
                                        <td align="right">
                                            @item.Title
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Author")
                                        </th>
                                        <td align="right">
                                            @item.Author
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Publisher")
                                        </th>
                                        <td align="right">
                                            @item.Publish
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Status")
                                        </th>
                                        <td align="right">
                                            @item.Status
                                        </td>
                                    </tr>
                                </table>
                                <div style="margin-bottom:2px; border-top:1px solid #ffffff">
                                    <div style="margin-left:5px"><strong>Comment: </strong>@item.Comment</div>
                                </div>
                            </div>
                                }
                                else if (@item.Status == "Rejected")
                                {
                            <div class="box-shadow-rejected">
                                <table class="table table-condensed table-top">
                                    <tr>
                                        <th>
                                            @Html.Label("Title")
                                        </th>
                                        <td align="right">
                                            @item.Title
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Author")
                                        </th>
                                        <td align="right">
                                            @item.Author
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Publisher")
                                        </th>
                                        <td align="right">
                                            @item.Publish
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Status")
                                        </th>
                                        <td align="right">
                                            @item.Status
                                        </td>
                                    </tr>
                                </table>
                                <div style="margin-bottom:2px; border-top:1px solid #ffffff">
                                    <div style="margin-left:5px"><strong>Comment: </strong>@item.Comment</div>
                                </div>
                            </div>
                                }
                                else if (@item.Status == "Not Success")
                                {
                            <div class="box-shadow-notsuccess">
                                <table class="table table-condensed table-top">
                                    <tr>
                                        <th>
                                            @Html.Label("Title")
                                        </th>
                                        <td align="right">
                                            @item.Title
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Author")
                                        </th>
                                        <td align="right">
                                            @item.Author
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Publisher")
                                        </th>
                                        <td align="right">
                                            @item.Publish
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Status")
                                        </th>
                                        <td align="right">
                                            @item.Status
                                        </td>
                                    </tr>
                                </table>
                                <div style="margin-bottom:2px; border-top:1px solid #ffffff">
                                    <div style="margin-left:5px"><strong>Comment: </strong>@item.Comment</div>
                                </div>
                            </div>
                                }
                                else
                                {
                            <div class="box-shadow-default">
                                <table class="table table-condensed table-top">
                                    <tr>
                                        <th>
                                            @Html.Label("Title")
                                        </th>
                                        <td align="right">
                                            <smail>@item.Title</smail>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Author")
                                        </th>
                                        <td align="right">
                                            <samil>@item.Author</samil>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Publisher")
                                        </th>
                                        <td align="right">
                                            <smaill>@item.Publish</smaill>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.Label("Status")
                                        </th>
                                        <td align="right">
                                            <smaill>@item.Status</smaill>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade" id="history">
                        <div class="container">
                            <table style="margin:auto;text-align:center" class="table table-striped table-condensed table-top">
                                <thead>
                                    <tr>
                                        <td colspan="1">
                                            @Html.ActionLink("More", "ReadHistory")
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            Title
                                        </td>
                                    </tr>
                                    @foreach (var item in this.Model.ReadHistoryModelList)
                                    {
                                    <tr>
                                        <td data-toggle="tooltip" dataplacement="top" title="@item.Title" align="center" valign="middle">
                                            @item.Title
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" >
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Confirm dialog</h4>
            </div>
            <div class="modal-body">
                @if (Model.RenewLevel)
                {
                    <p>
                        <br />
                        For this book, You can renew once, <br />
                        Are you sure you want to renew this book?
                    </p>
                }
                else
                {
                    <p>
                        <br />
                        For all of books in your hand, You can renew 1 time totally, <br />
                        Are you sure you want to renew now?
                    </p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-model">OK</button>
            </div>
        </div>
    </div>
</div>