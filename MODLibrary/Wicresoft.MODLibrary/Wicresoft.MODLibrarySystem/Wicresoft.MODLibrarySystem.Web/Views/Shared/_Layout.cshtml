<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mod-Library System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/baseValidation.js")
    @Scripts.Render("~/bundles/bootstrap")    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MOD Library System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Books Store", "Index", "BookManage", null, null)</li>
                    <li>@Html.ActionLink("Rent Manage", "Index", "RentManage", null, null)</li>
                    <li>@Html.ActionLink("User Manage", "Index", "UserManage", null, null)</li>
                    <li>@Html.ActionLink("Category Manage", "Index", "CategoryManage", null, null)</li>
                    <li>@Html.ActionLink("Author Manage", "Index", "AuthorManage", null, null)</li>
                    <li>@Html.ActionLink("Publisher Manage", "Index", "PublisherManage", null, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, null)</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, null)</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Action("LoginUserDisplay", "Home")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MOD Dev Application</p>
        </footer>
    </div>
</body>
@RenderSection("scripts", required: false)
</html>
