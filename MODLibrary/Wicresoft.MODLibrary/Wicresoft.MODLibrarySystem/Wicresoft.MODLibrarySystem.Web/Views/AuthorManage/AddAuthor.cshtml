@{
    ViewBag.Title = "AddAuthor";
}
@model Wicresoft.MODLibrarySystem.Web.Models.Author.AuthorModel

@section scripts{
    @Scripts.Render("~/Scripts/AuthorManaegeJS/AddAuthor.js")
}
<h2>AddAuthor</h2>
@using (Html.BeginForm())
{
    <div class="jumbotron">
        <table>
            <caption>Add Author</caption>
            <tbody>      
                <tr>
                    <th>Name</th>
                    <td>@Html.TextBoxFor(m => m.AuthorName) <span class="requireSpan">*</span>
                        <label id="AuthorName_errorData" errordatamessage="AuthorName is require or illegal." class="errorLable" />
                    </td>
                </tr>
                <tr>
                    <th>Introduction</th>
                    <td>@Html.TextBoxFor(m => m.AuthorIntroduction)</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Add"/>
                        @Html.ActionLink("Back", "Index")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
}