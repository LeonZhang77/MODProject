@{
    ViewBag.Title = "Category Manage";
}
@model Wicresoft.MODLibrarySystem.Web.Models.CategoryManage.CategoryManageIndexModel

@using (Html.BeginForm())
{
    <div class="jumbotron">
        <div>
            <span>CategoryName</span>
            @Html.TextBoxFor(m => m.FilterName)
            <input type="submit" value="Search" />
        </div>
        <table style="border-color:gray;border:1px;">
            <caption>Category List</caption>
            <thead>
                <tr>
                    <td colspan="3">
                        @Html.ActionLink("Add", "AddCategory")
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>
                        CategoryName
                    </th>
                    <th>
                        ParentCategoryName
                    </th>
                    <th>
                        Operation
                    </th>

                </tr>
                @foreach (var item in this.Model.CategoryModelList)
                {
                    <tr>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @item.ParentCategoryName
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditCategory", new { @id = item.ID })
                            @Html.ActionLink("Delete", "DeleteCategory", new { @id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" align="right">@Html.Raw(this.Model.PagingContent.PagingViewContent)</td>
                </tr>
            </tfoot>
        </table>
    </div>
}