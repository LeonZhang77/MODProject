@{
    ViewBag.Title = "EditBooks";
}
@model Wicresoft.MODLibrarySystem.Web.Models.BookManage.AddDetailBookModel
@Scripts.Render("~/Scripts/ui/jquery.ui.datepicker.js")
@section scripts{
    @Scripts.Render("~/Scripts/BookManageJS/BaseBooks.js")
    @Scripts.Render("~/Scripts/BookManageJS/EditBooks.js")
}
<h2>EditBooks</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ID)
    <div class="jumbotron">
        <table>
            <caption>Edit Books</caption>
            <tbody>
                <tr>
                    <th>BookName</th>
                    <td>
                        @Html.DisplayFor(b => b.BookName) @Html.HiddenFor(b => b.BookID)
                    </td>

                </tr>
                <tr>
                    <th>ISBN</th>
                    <td>
                        @Html.DisplayFor(b => b.ISBN)
                    </td>

                </tr>
                <tr>
                    <th>Owner</th>
                    <td>
                        @Html.TextBoxFor(b => b.Owner) @Html.HiddenFor(b => b.OwnerValue)<span class="requireSpan">*</span>
                        <label id="Owner_errorData" errordatamessage="Owner can not be empty." class="errorLable" />
                    </td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>
                        @Html.DropDownListFor(m => m.BookStatusSelected, this.Model.BookStatusList)
                        <span class="requireSpan">*</span>
                        <label id="Status_errorData" errordatamessage="Status is require." class="errorLable" />
                        @Html.HiddenFor(m => m.BeforeStatus)
                    </td>
                </tr>
                <tr>
                    <th>Storage_Time</th>
                    <td>
                        @Html.TextBoxFor(b => b.Storage_Time) <span class="requireSpan">*</span>
                        <label id="Storage_Time_errorData" errordatamessage="Storage_Time can not be empty." class="errorLable" />
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Edit" onclick="return bindConfrimDialog(this, 'edit', 'b', EditBookDetailSubmitValidation);" />
                        @Html.ActionLink("Back", "DetailBook", new { @id = this.Model.BookID })
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

     <!--Choose area-->
    <div id="OwnerChoose" title="OwnerChoose">
        <label>Please Input</label><input id="SearchOwner" type="text" requsturl="@Url.Action("JsonGetUserByName", "UserManage")" />
        <input id="OwnerChooseDisplay_Value" displayname="" type="hidden" />
        <table class="chooseTableStyle">
            <caption>You choose result</caption>
            <tr>
                <td id="OwnerChooseDisplay"></td>
            </tr>
        </table>
    </div>
}

