@{
    ViewBag.Title = "Publisher Manage";
}

@model Wicresoft.MODLibrarySystem.Web.Models.PublisherManage.PublisherManageIndexModel
<link rel="stylesheet" href="Content/reset.css"> <!-- CSS reset -->
<link rel="stylesheet" href="Content/style.css"> <!-- Resource style -->
<script src="/Scripts/modernizr-2.6.2.js"></script> <!-- Modernizr -->

<div class="cd-popup" role="alert">
    <div class="cd-popup-container">
        <p>Are you sure you want to delete this element?</p>
        <ul class="cd-buttons">
            <li><a href="#0" onclick="return true;">Yes</a></li>
            <li><a href="#0" onclick=" $('.cd-popup').removeClass('is-visible');">No</a></li>
        </ul>
        <a href="#0" class="cd-popup-close img-replace">Close</a>
    </div> <!-- cd-popup-container -->
</div> <!-- cd-popup -->

@using (Html.BeginForm())
{
    <div class="jumbotron">
        <div>
            <span>Name</span>
            @Html.TextBoxFor(m => m.FilterName)
            <input type="submit" value="Search" />
        </div>
        <table style="border-color:gray;border:1px;">
            <caption>System Publisher List</caption>
            <thead>
                <tr>
                    <td colspan="4">
                        @Html.ActionLink("Add", "AddPublisher")
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Introduction
                    </th>
                    <th>
                        Operation
                    </th>
                </tr>
                @foreach (var item in this.Model.PublisherModelList)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.PublisherName
                        </td>
                        <td>
                            @item.PublisherIntroduction
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditPublisher", new { @id = item.ID })
                            @if (!item.IsUse)
                            {
                                <a href="PublisherManage/DeletePublisher/@item.ID" class="cd-popup-trigger">Delete</a>
                            } 
                        </td>                        
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" align="right">@Html.Raw(this.Model.PagingContent.PagingViewContent)</td>
                </tr>
            </tfoot>
        </table>
    </div>
}

<script src="~/Scripts/ConfrimDialog.js"></script> <!-- Resource jQuery -->

