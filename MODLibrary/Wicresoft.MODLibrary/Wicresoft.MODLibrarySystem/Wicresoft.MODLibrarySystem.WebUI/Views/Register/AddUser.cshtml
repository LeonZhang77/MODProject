@{
    ViewBag.Title = "AddUser";
}
@model Wicresoft.MODLibrarySystem.WebUI.Models.Register.RegisterModel
<h2>Register</h2>

@Scripts.Render("~/Scripts/ui/jquery-ui.js")
@Scripts.Render("~/Scripts/ui/jquery.ui.datepicker.js")

@using (Html.BeginForm())
{
    <div class="jumbotron">
        <table>
            <caption>
                Register
                @if (this.Model.ErrorState)
                {
                    <span style="color:red">@this.Model.StateMessage</span>
                }
            </caption>
            <tbody>
                <tr>
                    <th>DisplayName</th>
                    <td>
                        @Html.TextBoxFor(m => m.DisplayName) <span class="requireSpan">*</span>
                     
                    </td>
                </tr>
                <tr>
                    <th>RealName</th>
                    <td>
                        @Html.TextBoxFor(m => m.RealName) <span class="requireSpan">*</span>
                       
                    </td>

                </tr>
                <tr>
                    <th>LoginName</th>
                    <td>
                        @Html.TextBoxFor(m => m.LoginName) <span class="requireSpan">*</span>
                   
                    </td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>
                        @Html.TextBoxFor(m => m.Password) <span class="requireSpan">*</span>
  
                    </td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>
                       @Html.TextBoxFor(m => m.Email, new Dictionary<string, object>(){{"readonly","true"}}) <span class="requireSpan">*</span>
                    </td>
                </tr>
                <tr>
                    <th>Floor</th>
                    <td>@Html.TextBoxFor(m => m.Floor)</td>
                </tr>
                <tr>
                    <th>PM</th>
                    <td>@Html.TextBoxFor(m => m.PM)</td>
                </tr>
                <tr>
                    <th>Team</th>
                    <td>@Html.TextBoxFor(m => m.Team)</td>
                </tr>
                <tr>
                    <th>ChineseName</th>
                    <td>@Html.TextBoxFor(m => m.Chinese_Name)</td>
                </tr>
                <tr>
                    <th>Wechat</th>
                    <td>@Html.TextBoxFor(m => m.Wechat)</td>
                </tr>
                <tr>
                    <th>Grade</th>
                    <td>@Html.TextBoxFor(m => m.Grade)</td>
                </tr>
                <tr>
                    <th>LatePoint</th>
                    <td>
                        @Html.TextBoxFor(m => m.Late_point) <span class="requireSpan">*</span>
                        <label id="Late_point_errorData" errordatamessage="Late_point is require and must be a number." class="errorLable" />
                    </td>
                </tr>
                <tr>
                    <th>Remark</th>
                    <td>@Html.TextBoxFor(m => m.Remark)</td>
                </tr>
             
                <tr>
                    <th>DropdownList</th>
                    <td>
                        <select id="TestDropDownList">
                            <option value="">please choose</option>
                            <option value="1">test1</option>
                            <option value="2">test2</option>
                        </select>
                        <span class="requireSpan">*</span>
                        <label id="TestDropDownList_errorData" errordatamessage="TestDropDownList is require." class="errorLable" />
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Add" />
                        @Html.ActionLink("Back", "Index")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
}
