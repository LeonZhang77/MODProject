@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Wicresoft.MODLibrarySystem.WebUI.Models.RentManage.RentManageIndexModel
@Scripts.Render("~/Scripts/RentManageJS/RentIndex.js")
<link href="~/Content/TDNoWarp.css" rel="stylesheet" />
<style type="text/css">

.gradient{
    background: #fafafa;
    background: -moz-linear-gradient(top,  #fafafa 0%, #808080 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-start(0%,#fafafa), color-stop(100%,#808080));
    background: -webkit-linear-gradient(top,  #fafafa 0%,#808080 100%);
    background: -o-linear-gradient(top,  #fafafa 0%,#808080 100%);
    background: -ms-linear-gradient(top,  #fafafa 0%,#808080 100%);
    background: linear-gradient(to bottom,  #fafafa 0%, #808080 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#fafafa', endColorstr='#808080',GradientType=0 );
}
</style>

<h2>Index</h2>

@using (Html.BeginForm())
{
    <div class="jumbotron" style="height:1000px;">
        <div style="width:550px; height:400px; border:1px; float:left; background:#d9d9d9; text-align:center">
                <table style="width:500px;margin:auto;text-align:left" class="table table-bordered">
                    <caption>
                        <h2>My Request</h2>
                    </caption>
                    <thead>
                        <tr>
                            <td colspan="5">
                                @Html.ActionLink("More", "MyRequest")
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Title
                            </td>
                            <td>
                                Author
                            </td>
                            <td>
                                Publish
                            </td>
                            <td>
                                Status
                            </td>
                            <td>
                                Comment
                            </td>
                        </tr>
                        @foreach (var item in this.Model.MyRequestList)
                       {
                           if (item.Status == "Rejected")
                           {
                            <tr class="danger">
                                <td data-toggle="tooltip" title="@item.Title">
                                    @item.Title
                                </td>
                                <td data-toggle="tooltip" title="@item.Author">
                                    @item.Author
                                </td>
                                <td data-toggle="tooltip" title="@item.Publish">
                                    @item.Publish
                                </td>
                                <td data-toggle="tooltip" title="@item.Status">
                                    @item.Status
                                </td>
                                <td data-toggle="tooltip" title="@item.Comment">
                                    @item.Comment
                                </td>
                            </tr>
                           }
                           else if (item.Status == "Approved")
                           {
                            <tr class="success">
                                <td data-toggle="tooltip" title="@item.Title">
                                    @item.Title
                                </td>
                                <td data-toggle="tooltip" title="@item.Author">
                                    @item.Author
                                </td>
                                <td data-toggle="tooltip" title="@item.Publish">
                                    @item.Publish
                                </td>
                                <td data-toggle="tooltip" title="@item.Status">
                                    @item.Status
                                </td>
                                <td data-toggle="tooltip" title="@item.Comment">
                                    @item.Comment
                                </td>
                            </tr>
                           }
                           else if (item.Status == "Not Success")
                           {
                            <tr class="warning">
                                <td data-toggle="tooltip" title="@item.Title">
                                    @item.Title
                                </td>
                                <td data-toggle="tooltip" title="@item.Author">
                                    @item.Author
                                </td>
                                <td data-toggle="tooltip" title="@item.Publish">
                                    @item.Publish
                                </td>
                                <td data-toggle="tooltip" title="@item.Status">
                                    @item.Status
                                </td>
                                <td data-toggle="tooltip" title="@item.Comment">
                                    @item.Comment
                                </td>
                            </tr>
                           }
                           else
                           {
                            <tr>
                                <td data-toggle="tooltip" title="@item.Title">
                                    @item.Title
                                </td>
                                <td data-toggle="tooltip" title="@item.Author">
                                    @item.Author
                                </td>
                                <td data-toggle="tooltip" title="@item.Publish">
                                    @item.Publish
                                </td>
                                <td data-toggle="tooltip" title="@item.Status">
                                    @item.Status
                                </td>
                                <td data-toggle="tooltip" title="@item.Comment">
                                    @item.Comment
                                </td>
                            </tr>
                           }

                       }
                </table>
        </div>
        <div class="gradient" style="width:350px; height:800px;border:1px;float:right; text-align:center;">
            <table style=" width:200px;margin:auto;text-align:left" class="table table-bordered">
                <caption><h2>Read History</h2></caption>
                <thead>
                    <tr>
                        <td colspan="1">
                            @Html.ActionLink("More", "ReadHistory")
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Title
                        </td>
                    </tr>
                    @foreach (var item in this.Model.ReadHistoryModelList)
                    {
                        <tr>
                            <td data-toggle="tooltip" dataplacement="top" title="@item.Title">
                                @item.Title
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="width:550px; height:400px; border:1px; float:left; background:#c2c2c2; text-align:center">
            <table style="width:500px; margin:auto;text-align:left" class="table table-bordered">
                <caption><h2>Books In Hand</h2></caption>
                <thead>
                    <tr>
                        <td>
                            Title
                        </td>
                        <td>
                            Start Borrow Day
                        </td>
                        <td>
                            Expiration Day
                        </td>
                        <td>
                            Operation
                        </td>
                    </tr>
                    @foreach (var item in this.Model.BookInHandModelList)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.StartBorrowDay
                            </td>
                            <td>
                                @item.EXpirationDay
                            </td>
                            <td>
                                @if (item.HasAlreadyRenewed)
                                {
                                    <p>Renewed</p>
                                }
                                @if (item.EnableRenew)
                                {
                                    <a class = "btn btn-primary"onclick="renewBookInHandButton(@item.ID)">Renew</a>
                                }
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>


    </div>
}

<div style="display: none" id="RenewConfirmDialog" title="Confirm Dialog">
    @if (Model.RenewLevel)
    {
            <p>
                <br />
                For this book, You can renew once, <br />
                Are you sure you want to renew this book?
            </p>
    }
    else
    {
        <p>
            <br />
            For all of books in your hand, You can renew 1 time totally, <br />
            Are you sure you want to renew now?
        </p>
    }

</div>

<div style="display:none" id="RenewBookInHandURL" requstUrl =" @Url.Action("RenewBookInHand", "RentManage")"></div>
