@{
    ViewBag.Title = "DetailOfTheBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Wicresoft.MODLibrarySystem.Unity;
@model Wicresoft.MODLibrarySystem.WebUI.Models.BookManage.DetailBookModel
<script type="text/javascript" src="~/Scripts/BookManageJS/DetailTheBook.js"></script>


<h2>BookDetail</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ID)
    <div class="jumbotron" style="height:600px;">
        <div style="width:50%;float:left">
            <table>
                <caption>Detail Of The Book</caption>
                <tbody>
                    <tr>
                        <th>BookName</th>
                        <td>
                            @Html.TextBoxFor(b => b.BookName, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>ISBN</th>
                        <td>
                            @Html.TextBoxFor(b => b.ISBN, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>Publish_Date</th>
                        <td>
                            @Html.TextBoxFor(b => b.Publish_Date, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>Avaliable_Inventory</th>
                        <td>
                            @Html.TextBoxFor(b => b.Avaliable_Inventory, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>Max_Inventory</th>
                        <td>
                            @Html.TextBoxFor(b => b.Max_Inventory, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>Price_Inventory</th>
                        <td>
                            @Html.TextBoxFor(b => b.Price_Inventory, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>PublisherName</th>
                        <td>
                            @Html.TextAreaFor(b => b.PublisherName, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>AuthorName</th>
                        <td>
                            @Html.TextAreaFor(b => b.AuthorName, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>CategoryName</th>
                        <td>
                            @Html.TextAreaFor(b => b.CatagoryName, new { @readonly = "readonly" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <img width="30" height="30" src="~/Content/images/support.png" />
                        </th>
                        <td width="60">
                            <label id="Supports">@this.Model.Supports</label>
                            @if (this.Model.IsAvaliableForSupport)
                            {
                                <a id="SupportsActionLink" herf="#" onclick = "bindSOOConfirmDialog(this, @this.Model.ID, 'supports')">Like it!</a>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <img width="30" height="30" src="~/Content/images/objection.png" />
                        </th>
                        <td>
                            <label id="Objections">@this.Model.Objections</label>
                            @if (this.Model.IsAvaliableForSupport)
                            {
                                <a id="ObjectionsActionLink" herf="#" onclick = "bindSOOConfirmDialog(this, @this.Model.ID, 'objections')">Don't Like it!</a>
                            }
                        </td>                       
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2">
                            @Html.ActionLink("Back", "Index")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div style="width:50%;float:left;">
        </div>
    </div>
}

<div id="supportOrObjection-dialog-confirm" title="Support Or Objection?" style="display: none">
    <p>
        You Only have ONE chance. Are you sure?
    </p>
</div>


