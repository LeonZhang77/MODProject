<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MOD Badminton</title>
    @Styles.Render("~/Scripts/dist/css/zui.min.css")

    @Styles.Render("~/Scripts/dist/css/zui-theme.css")
    <link href="~/scripts/dist/lib/datatable/zui.datatable.min.css" rel="stylesheet" />
    @Scripts.Render("~/Scripts/dist/lib/jquery/jquery.js")
    @Scripts.Render("~/Scripts/dist/js/zui.min.js")
    <script src="~/scripts/dist/lib/datatable/zui.datatable.min.js"></script>

    @RenderSection("scripts", required: false)

</head>
<body class="bgBadminImgBottom">
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container-fluid">
            <!-- 导航头部 -->
            <div class="navbar-header">
                <!-- 移动设备上的导航切换按钮 -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-example">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- 品牌名称或logo -->
                <a class="navbar-brand" href="/Home/Index">MOD Badminton Group</a>
            </div>
            <!-- 导航项目 -->
            <div class="collapse navbar-collapse navbar-collapse-example">
                <!-- 一般导航项目 -->
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("比赛录入", "Index", "MatchInput", null, null)</li>
                    <li>@Html.ActionLink("排行榜", "Index", "ScoreList", null, null)</li>
                </ul>
                
            </div><!-- END .navbar-collapse -->
        </div>
    </nav>
   
    <div style="width:100%">
        <div class="container body-content">

            @RenderBody()
            <hr />
            <footer>
                <center><p>&copy; @DateTime.Now.Year - MOD Badminton Group Management</p></center>
            </footer>
        </div>
    </div>
</body>
</html>
