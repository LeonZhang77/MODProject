@{
    Layout = null;
}
<div class="modal fade" id="DeleteMemberDialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-header">删除</div>
        <div class="modal-content">
            <br />
            <p>
               该会员将被删除，删除后不可恢复，点击"确定"按钮继续
            </p>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" onclick="doDeleteMember()">确定</button>
            </div>
        </div>
    </div>
</div>
<div style="display: none" id="DeleteMemberURL" requsturl="@Url.Action("DeleteMember", "DataManage")"></div>
<div style="display: none" id="CheckMemberNameURL" requsturl="@Url.Action("CheckNameRepeat", "DataManage")"></div>
<div class="modal fade" id="AddMemberDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                <h4 class="modal-title">添加会员信息</h4>
            </div>
            @using (Html.BeginForm("AddMember", "DataManage")) { 
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 required">姓名:</label>
                        <div class="col-md-6">
                            @Html.TextBox("Name", null, new {@id="MemberName", @required = "required", @class = "form-control" })
                            <div class="text-danger" id="Addtip"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 required">性别:</label>
                        <div class="col-md-6">
                            <input type="radio" value="true" name="Male" checked="checked" />男
                            <input type="radio" value="false" name="Male" />女
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">俱乐部:</label>
                        <div class="col-md-6">
                            <select id="AddClub" name="ClubID" class="form-control">
                                <option></option>
                                @foreach (var item in this.Model.ClubList)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="submit" class="btn btn-primary" id="memberSave">保存</button>
            </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="EditMemberDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                <h4 class="modal-title">修改会员信息</h4>
            </div>
            @using (Html.BeginForm("EditMember", "DataManage"))
            { 
                <input type="number" name="ID" id="EditMemberID" hidden="hidden"/>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 required">姓名:</label>
                        <div class="col-md-6">
                            <input type="text" id="EditMemberName" name="Name" class="form-control"/>
                            <div class="text-danger" id="Edittip"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 required">性别:</label>
                        <div class="col-md-6">
                            <input type="radio" value="true" name="Male" id="boy"/>男
                            <input type="radio" value="false" name="Male" id="girl"/>女
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 ">俱乐部:</label>
                        <div class="col-md-6">
                            <select id="EditClub" name="ClubName" class="form-control" >
                                <option></option>
                                @foreach (var item in this.Model.ClubList)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="submit" class="btn btn-primary" id="memberEditSave">保存</button>
            </div>
            }
        </div>
    </div>
</div>
