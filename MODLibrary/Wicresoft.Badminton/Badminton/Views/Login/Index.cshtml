@{
    ViewBag.Title = "MOD Badmiton Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  Badminton.Models.Login.LoginIndexModel


<h2>@ViewBag.Title.</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm(new { @class="form-horizontal"}))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            @if (this.Model.IsFail)
                            {
                                <span style="color:red">Login Fail. <br /> @ViewBag.ErrorMessage</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row" >
                        <label class="col-md-1 control-label">账号</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => this.Model.Account, new { @class = "form-control", required = "true" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label class="col-md-1 control-label">密码</label>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => this.Model.Password, new { @class = "form-control", required = "true", @pattern = ".{6,20}", @title = "6 to 20 characters" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-7">
                            <input type="submit" value="Log in" class="btn btn-block btn-info" />
                        </div>
                    </div>
                </div>

            }
        </section>
    </div>
</div>
